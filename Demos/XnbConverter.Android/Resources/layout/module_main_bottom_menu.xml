<LinearLayout
        android:layout_width="match_parent"
        android:background="#FAFAFA"
        android:layout_height="56dp"
        android:gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
            android:background="@drawable/ic_filemenu_shear"
            android:id="@+id/id_main_bottom_menu_shear"
            android:scaleType="fitCenter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

    <ImageButton
            android:background="@drawable/ic_filemenu_copy"
            android:id="@+id/id_bottom_menu_copy"
            android:scaleType="fitCenter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

    <ImageButton
            android:background="@drawable/ic_del"
            android:id="@+id/id_bottom_menu_del"
            android:scaleType="fitCenter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

    <ImageButton
            android:background="@drawable/ic_info"
            android:id="@+id/id_bottom_menu_info"
            android:scaleType="fitCenter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

    <ImageButton
            android:background="@drawable/ic_more"
            android:id="@+id/id_bottom_menu_more"
            android:scaleType="fitCenter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
</LinearLayout>
